# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cdss

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# FHIR Configuration
FHIR_BASE_URL=https://r4.smarthealthit.org
FHIR_CLIENT_ID=your_fhir_client_id
FHIR_CLIENT_SECRET=your_fhir_client_secret
FHIR_SCOPE=launch/patient patient/*.read

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key
SESSION_SECRET=your_session_secret_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/cdss.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Clinical Decision Support Configuration
CDS_RULES_PATH=./config/clinical-rules.json
DRUG_INTERACTION_API_URL=https://api.drugbank.com/v1
CLINICAL_GUIDELINES_API_URL=https://api.guidelines.gov

# Alert Configuration
ALERT_CHECK_INTERVAL=300000
CRITICAL_ALERT_TIMEOUT=60000

# External Integrations
PUBMED_API_KEY=your_pubmed_api_key
CLINICAL_TRIALS_API_KEY=your_clinical_trials_api_key
FDA_API_KEY=your_fda_api_key 